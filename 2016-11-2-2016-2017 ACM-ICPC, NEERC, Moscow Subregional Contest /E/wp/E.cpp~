#include <bits/stdc++.h>
using namespace std;


int main() {
	freopen("E.in","r",stdin);
	freopen("E.out","w",stdout);
	scanf("%d",&n);
	for (int i = 1; i <= n; i++)
		scanf("%d",&A[i]);
	sort(A + 1, A + n + 1);
	f[1][0] = count(A[0]);
	f[1][3] = 1 << 25;
	for (int i = 2; i <= n; i++) {
		for (int t = 0; t < 4; t++) {
			f[i][0] = min(f[i][0], f[i - 1][0] + cnt[A[i]] + 1);
		}
		if (A[i] == A[i - 1] + 1) {
			f[i][1] = min(f[i][1], f[i - 1][0] + cnt[i] + 1);
			f[i][1] = min(f[i][1], f[i - 1][1] + cnt[i] - cnt[i - 1]);
			f[i][3] = min(f[i][3], f[i - 1][3] + cnt[i] - cnt[i - 2]);
			proc(g[i][0][0], cnt[A[i]] + cnt[A[]])
		}
	}
	return 0;
}
